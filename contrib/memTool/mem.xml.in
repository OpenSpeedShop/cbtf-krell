<MRNet xmlns="http://www.krellinst.org/CBTF/MRNet.xsd">


  <Type>memNetwork</Type>
  <Version>1.0.0</Version>

  <Input>
      <Name>in</Name>
      <To><Input>system_in</Input></To>
  </Input>

  <Output>
      <Name>out</Name>
      <From><Output>system_out</Output></From>
  </Output>

  <Frontend>
    <Network>
      <Type>memNetwork_Frontend</Type>
      <Version>1.0.0</Version>

      <SearchPath>@@contriblib_location@@</SearchPath>
      <Plugin>mrnetPlugin.so</Plugin>

      <Component>
        <Name>PacketToString</Name>
        <Type>ConvertPacketToString</Type>
      </Component>

      <Component>
        <Name>StringToPacket</Name>
        <Type>ConvertStringToPacket</Type>
      </Component>

      <Input>
        <Name>Frontend_In</Name>
        <To>
          <Name>PacketToString</Name>
          <Input>in2</Input>
        </To>
      </Input>

      <Input>
        <Name>system_in</Name>
        <To>
          <Name>StringToPacket</Name>
          <Input>in1</Input>
        </To>
      </Input>

      <Output>
         <Name>system_out</Name>
         <From>
             <Name>PacketToString</Name>
             <Output>out2</Output>
         </From>
      </Output>

      <Output>
         <Name>Frontend_Out</Name>
         <From>
             <Name>StringToPacket</Name>
             <Output>out1</Output>
         </From>
      </Output>

    </Network>

    <IncomingUpstream>
      <Name>UpwardStream</Name>
      <To><Input>Frontend_In</Input></To>
    </IncomingUpstream>

    <OutgoingDownstream>
        <Name>DownwardStream</Name>
        <From><Output>Frontend_Out</Output></From>
    </OutgoingDownstream>

  </Frontend>

  <Backend>
    <Network>
      <Type>memNetwork_Backend</Type>
      <Version>1.0.0</Version>
      <SearchPath>@@contriblib_location@@</SearchPath>
      <Plugin>memPlugin.so</Plugin>
      <Plugin>mrnetPlugin.so</Plugin>

      <Component>
        <Name>getPID</Name>
        <Type>getPID</Type>
      </Component>

      <Component>
        <Name>getMem</Name>
        <Type>memPlugin</Type>
      </Component>
      <Component>
        <Name>PacketToString</Name>
        <Type>ConvertPacketToString</Type>
      </Component>
      <Component>
        <Name>StringToPacket</Name>
        <Type>ConvertStringToPacket</Type>
      </Component>

      <Input>
        <Name>Backend_In</Name>
        <To>
          <Name>PacketToString</Name>
          <Input>in1</Input>
        </To>
      </Input>

      <Output>
        <Name>Backend_Output</Name>
        <From>
          <Name>StringToPacket</Name>
          <Output>out2</Output>
        </From>
      </Output>

      <Connection>
        <From>
          <Name>PacketToString</Name>
          <Output>out1</Output>
        </From>
        <To>
          <Name>getPID</Name>
          <Input>in</Input>
        </To>
      </Connection>
      <Connection>
        <From>
          <Name>getPID</Name>
          <Output>out</Output>
        </From>
        <To>
          <Name>getMem</Name>
          <Input>in</Input>
        </To>
      </Connection>
      <Connection>
        <From>
          <Name>getMem</Name>
          <Output>out</Output>
        </From>
        <To>
          <Name>StringToPacket</Name>
          <Input>in2</Input>
        </To>
      </Connection>

    </Network>

    <IncomingDownstream> 
      <Name>DownwardStream</Name>
      <To><Input>Backend_In</Input></To>
    </IncomingDownstream>
    
    <OutgoingUpstream>
      <Name>UpwardStream</Name>
      <From><Output>Backend_Output</Output></From>
    </OutgoingUpstream>

  </Backend>

</MRNet>
