<MRNet xmlns="http://www.krellinst.org/CBTF/MRNet.xsd">


  <Type>stackNetwork</Type>
  <Version>1.0.0</Version>

  <Input>
      <Name>in</Name>
      <To><Input>system_in</Input></To>
  </Input>

  <Output>
      <Name>out</Name>
      <From><Output>system_out</Output></From>
  </Output>

  <Frontend>
    <Network>
      <Type>stackNetwork_Frontend</Type>
      <Version>1.0.0</Version>

      <SearchPath>@@contriblib_location@@</SearchPath>
      <Plugin>mrnetPlugin.so</Plugin>

      <Component>
        <Name>PassThroughStr</Name>
        <Type>PassThrough</Type>
      </Component>
      <Component>
        <Name>PassThroughVec</Name>
        <Type>PassThrough</Type>
      </Component>

      <Input>
        <Name>Frontend_In</Name>
        <To>
          <Name>PassThroughVec</Name>
          <Input>in2</Input>
        </To>
      </Input>

      <Input>
        <Name>system_in</Name>
        <To>
          <Name>PassThroughStr</Name>
          <Input>in1</Input>
        </To>
      </Input>

      <Output>
         <Name>system_out</Name>
         <From>
             <Name>PassThroughVec</Name>
             <Output>out2</Output>
         </From>
      </Output>

      <Output>
         <Name>Frontend_Out</Name>
         <From>
             <Name>PassThroughStr</Name>
             <Output>out1</Output>
         </From>
      </Output>

    </Network>

    <IncomingUpstream>
      <Name>UpwardStream</Name>
      <To><Input>Frontend_In</Input></To>
    </IncomingUpstream>

    <OutgoingDownstream>
        <Name>DownwardStream</Name>
        <From><Output>Frontend_Out</Output></From>
    </OutgoingDownstream>

  </Frontend>

  <Filter>
    <Depth><RootRelative offset="0"/></Depth>
    <Network>
      <Type>stackNetwork_Filter</Type>
      <Version>1.0.0</Version>
      <SearchPath>@@contriblib_location@@</SearchPath>
      <Plugin>mrnetPlugin.so</Plugin>
      <Plugin>stackPlugin.so</Plugin>

      <Component>
        <Name>groupStackFilter</Name>
        <Type>groupStack</Type>
      </Component>
      
      <Input>
        <Name>Filter_In</Name>
        <To>
          <Name>groupStackFilter</Name>
          <Input>in</Input>
        </To>
      </Input>

      <Output>
        <Name>Filter_Output</Name>
        <From>
          <Name>groupStackFilter</Name>
          <Output>out</Output>
        </From>
      </Output>
      
    </Network>

<!-- stream from backend -->
    <IncomingUpstream>
      <Name>UpwardStream</Name>
      <To><Input>Filter_In</Input></To>
    </IncomingUpstream>

<!-- stream to frontend -->    
    <OutgoingUpstream>
      <Name>UpwardStream</Name>
      <From><Output>Filter_Output</Output></From>
    </OutgoingUpstream>

  </Filter> 

  <Backend>
    <Network>
      <Type>TestNetwork_Backend</Type>
      <Version>1.0.0</Version>
      <SearchPath>@@contriblib_location@@</SearchPath>
      <Plugin>mrnetPlugin.so</Plugin>
      <Plugin>stackPlugin.so</Plugin>

      <Component>
        <Name>getPID</Name>
        <Type>getPID</Type>
      </Component>
      <Component>
        <Name>getStack</Name>
        <Type>getStack</Type>
      </Component>

      <Input>
        <Name>Backend_In</Name>
        <To>
          <Name>getPID</Name>
          <Input>in</Input>
        </To>
      </Input>

      <Output>
        <Name>Backend_Output</Name>
        <From>
          <Name>getStack</Name>
          <Output>out</Output>
        </From>
      </Output>

      <Connection>
        <From>
          <Name>getPID</Name>
          <Output>out</Output>
        </From>
        <To>
          <Name>getStack</Name>
          <Input>in</Input>
        </To>
      </Connection>

    </Network>

    <IncomingDownstream> 
      <Name>DownwardStream</Name>
      <To><Input>Backend_In</Input></To>
    </IncomingDownstream>
    
    <OutgoingUpstream>
      <Name>UpwardStream</Name>
      <From><Output>Backend_Output</Output></From>
    </OutgoingUpstream>

  </Backend>

</MRNet>
