<MRNet xmlns="http://www.krellinst.org/CBTF/MRNet.xsd">

  <Type>Daemon_Tool_Demo</Type>
  <Version>1.0.0</Version>

  <Input>
      <Name>in</Name>
      <To><Input>in1</Input></To>
  </Input>

  <Output>
      <Name>out</Name>
      <From><Output>out2</Output></From>
  </Output>

  <Stream>
      <Name>UpwardStream</Name>
      <Tag>4242</Tag>
  </Stream>

  <Frontend>

    <Network>
      <Type>Daemon_Tool_Demo_Frontend</Type>
      <Version>1.0.0</Version>

      <SearchPath>@@demolib_location@@</SearchPath>
      <SearchPath>@@cbtflib_location@@</SearchPath>

      <Plugin>daemonToolDemoPlugin</Plugin>

      <Component>
        <Name>PacketToString</Name>
        <Type>ConvertPacketToString</Type>
      </Component>

      <Component>
        <Name>StringToPacket</Name>
        <Type>ConvertStringToPacket</Type>
      </Component>

      <Component>
        <Name>Display</Name>
        <Type>DisplayData</Type>
      </Component>
 
      <Input>
         <Name>in1</Name>
         <To>
             <Name>StringToPacket</Name>
             <Input>in1</Input>
         </To>
      </Input>

      <Input>
        <Name>IncomingData</Name>
        <To>
          <Name>PacketToString</Name>
          <Input>in2</Input>
        </To>
      </Input>

      <Output>
         <Name>out1</Name>
         <From>
             <Name>StringToPacket</Name>
             <Output>out1</Output>
         </From>
      </Output>

      <Output>
        <Name>out2</Name>
        <From>
          <Name>PacketToString</Name>
          <Output>out2</Output>
        </From>
      </Output>


    </Network>

    <IncomingUpstream>
      <Name>UpwardStream</Name>
      <To><Input>IncomingData</Input></To>
    </IncomingUpstream>

    <OutgoingDownstream>
        <Name>DownwardStream</Name>
        <From><Output>out1</Output></From>
    </OutgoingDownstream>

 
  </Frontend>

  <Filter>
 
    <Depth><AllOther/></Depth>

    <Network>
      <Type>Daemon_Tool_Demo_Filter</Type>
      <Version>1.0.0</Version>

      <SearchPath>@@demolib_location@@</SearchPath>
      <SearchPath>@@cbtflib_location@@</SearchPath>

      <Plugin>daemonToolDemoPlugin</Plugin>
 
    </Network>    

  </Filter>


  <Backend>
    
    <Network>
      
      <Type>Daemon_Tool_Demo_Backend</Type>
      <Version>1.0.0</Version>

      <SearchPath>@@demolib_location@@</SearchPath>
      <SearchPath>@@cbtflib_location@@</SearchPath>

      <Plugin>daemonToolDemoPlugin</Plugin>

      <Component>
        <Name>PacketToString</Name>
        <Type>ConvertPacketToString</Type>
      </Component>

      <Component>
        <Name>StringToPacket</Name>
        <Type>ConvertStringToPacket</Type>
      </Component>

      <Component>
        <Name>RunCommand</Name>
        <Type>PopenCommand</Type>
      </Component>
      
      <Input>
        <Name>in</Name>
        <To>
          <Name>PacketToString</Name>
          <Input>in1</Input>
        </To>
      </Input>

      <Connection>
        <From>
          <Name>PacketToString</Name>
          <Output>out1</Output>
        </From>
        <To>
          <Name>RunCommand</Name>
          <Input>in</Input>
        </To>
      </Connection>

      <Connection>
        <From>
          <Name>RunCommand</Name>
          <Output>out</Output>
        </From>
        <To>
          <Name>StringToPacket</Name>
          <Input>in2</Input>
        </To>
      </Connection>

      <Output>
        <Name>out</Name>
        <From>
          <Name>StringToPacket</Name>
          <Output>out2</Output>
        </From>
      </Output>

    </Network>
    
    <IncomingDownstream>
      <Name>DownwardStream</Name>
      <To><Input>in</Input></To>
    </IncomingDownstream>
    
    <OutgoingUpstream>
      <Name>UpwardStream</Name>
      <From><Output>out</Output></From>
    </OutgoingUpstream>
    
  </Backend>
</MRNet>
